{% extends "market/header.html" %}
{% block title %}热门词游戏列表{% endblock %}
{% block user %}{{user.last_name}}{{user.first_name}}{% endblock %}
{% block content %}

<div style="height:2%;font-size:25px;margin-top:2%">
<p id="index" style="visibility:hidden" value="{{index}}"></p>
<p>{{word}}下游戏列表</p>
</div>
<hr>

<div style="width:100%;height:50%;overflow:scroll;align:center;">
    <table border="1" id="senfe" cellspacing="0" width="80%" align="center">
        <thead>
            <tr>
                <th width="20%">游戏名</th>
                <th width="20%">游戏ID</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td colspan="1">{{ game.game_name }}</td>
                <td colspan="1">{{ game.game_id }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
